<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.greenowl.monitoramentodefauna.Faunas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ESCOLHA O GRUPO FAUNÍSTICO"
        android:id="@+id/textView8" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibave"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/ave"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Avifauna"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibinseto"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/inseto"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibanfibio"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/anfibio"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Entomofauna"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Herpetofauna"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibmorcego"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/morcego"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibrato"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/rato"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibjaguatirica"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp"
            android:src="@drawable/jaguatirica"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quirópteros"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="P Mamíferos"
            android:id="@+id/textView15"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="M&amp;G Mamíferos"
            android:id="@+id/textView14"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>
